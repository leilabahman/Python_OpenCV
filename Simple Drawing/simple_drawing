#Loading necessary packages
import cv2
import numpy as np

#Initialization
pressed = False
radius=10
color=(255,0,0)

# Creating a white canvas
canvas=np.ones([500,500,3],dtype='uint8')*255

# mouse_click callback
def mouse_click(event,x,y,flag,param):
    global canvas , pressed
    if event==cv2.EVENT_LBUTTONDOWN:
        pressed = True
        cv2.circle(canvas,(x,y),radius,color,-1)
    elif event==cv2.EVENT_MOUSEMOVE and pressed==True:
        cv2.circle(canvas,(x,y),radius,color,-1)
    if event==cv2.EVENT_LBUTTONUP:
        pressed=False
        
# window initialization and callback assignment
cv2.namedWindow('canvas')
cv2.setMouseCallback('canvas',mouse_click)

# Draw loop
while True:
    
    cv2.imshow('canvas',canvas)
    
    # key capture every 1ms    
    ch=cv2.waitKey(1)
    
    # Choosing between blue,green,red colors
    if ch & 0xFF == ord('q'):
        break
    elif ch & 0xFF == ord('b'):
        color = (255,0,0)
    elif ch & 0xFF == ord('g'):
        color = (0,255,0)
    elif ch & 0xFF == ord('r'):
        color = (0,0,255)
        
        
cv2.destroyAllWindows()
